{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "experimentalDecorators": true,
    "removeComments": true,
    "types": [
      "angular",
      "node"
    ]
  },
  "exclude": [
    "out",
    "node_modules",
    "dist",
    "dev",
    "reports"
  ]
}